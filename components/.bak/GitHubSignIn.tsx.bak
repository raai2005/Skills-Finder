import React from 'react';
import { Pressable, StyleSheet, Text, View } from 'react-native';
import { Ionicons } from '@expo/vector-icons';
import { useAuth } from '@/contexts/AuthContext';
import { useThemeColor } from '@/hooks/useThemeColor';

export function GitHubSignIn() {
  const { loginWithGithub } = useAuth();
  const backgroundColor = useThemeColor({}, 'background');
  const textColor = useThemeColor({}, 'text');
  const tintColor = useThemeColor({}, 'tint');
  
  const handleGitHubSignIn = async () => {
    try {
      const result = await loginWithGithub();
      if (!result.success) {
        // Handle error
        console.error('GitHub sign-in failed:', result.message);
      }
    } catch (error) {
      console.error('GitHub sign-in error:', error);
    }
  };
  
  return (
    <View style={styles.container}>
      <Pressable 
        style={({pressed}) => [
          styles.button,
          {
            backgroundColor: pressed ? '#1b1f23' : '#24292e',
            borderColor: pressed ? '#000000' : '#1b1f23',
          }
        ]}
        onPress={handleGitHubSignIn}
      >
        <Ionicons name="logo-github" size={24} color="#ffffff" style={styles.icon} />
        <Text style={styles.buttonText}>Continue with GitHub</Text>
      </Pressable>
      
      <Text style={[styles.disclaimer, { color: textColor }]}>
        By signing in with GitHub, you'll be able to share your skills and repositories with other users.
      </Text>
    </View>
  );
}

const styles = StyleSheet.create({
  container: {
    width: '100%',
    marginVertical: 16,
  },
  button: {
    flexDirection: 'row',
    alignItems: 'center',
    justifyContent: 'center',
    padding: 12,
    borderRadius: 8,
    borderWidth: 1,
  },
  buttonText: {
    color: '#ffffff',
    fontSize: 16,
    fontWeight: '600',
  },
  icon: {
    marginRight: 12,
  },
  disclaimer: {
    fontSize: 12,
    textAlign: 'center',
    marginTop: 8,
    paddingHorizontal: 16,
  },
});

export default GitHubSignIn;
